<view class="itemView" bindtap="itemTap">
  <view class="nameAndStateView">
    <view class="nameView">{{name}}</view>
    <view class="stateView">
      <text class="state">{{state}}</text>
    </view>
  </view>
  <view class="detailContainer">
    <view class="addressAndrecruitView">
      <view class="addressView">{{address}}</view>
      <view class="recruit">
        <view class="recruitPlanView">计划招募: {{recruitPlan}}</view>
        <view class="recruitedView">已招募: {{recruited}}</view>
      </view>
    </view>
    <view class="timeAndDistanceView">
      <view class="timeView">{{year}}-{{month}}-{{day}}</view>
      <view class="distanceCreditAndImageView">
        <view class="credit">
          <view class="creditImageView">
            <image class="iconImage" src="../../images/coin/coin.png"></image>
          </view>
          <view class="creditView">{{credit}}</view>
        </view>
        <view class="distance">
          <view class="positionImageView">
            <image class="iconImage" src="../../images/position/position.png"></image>
          </view>
          <view class="distanceView">{{distance}}km</view>
        </view>
      </view>
    </view>
  </view>
</view>