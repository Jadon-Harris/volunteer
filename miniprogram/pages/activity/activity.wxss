/* pages/activity/activity.wxss */
.page {
  width: 100%;
  height: 100%;
  position: fixed;
  background: linear-gradient(to bottom, #1296db, white);
}

.first {
  display: flex;
  flex-direction: column;
  border-radius: 24rpx;
  margin-top: 24rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  background-color: white;
}

.name {
  font-size: 48rpx;
  font-weight: 600;
  margin-top: 24rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
}

.typeAndStateView {
  display: flex;
  flex-direction: row;
  position: relative;
}

.activityType {
  display: flex;
  width: fit-content;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 24rpx;
  margin-left: 24rpx;
  margin-bottom: 24rpx;
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 24rpx;
  border: 2rpx solid #1296db;
  color: #1296db;
  align-items: center;
}

.state {
  position: absolute;
  width: fit-content;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 24rpx;
  margin-left: 24rpx;
  margin-bottom: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 24rpx 0 0 24rpx;
  color: white;
  background-color: #1296db;
  right: 0;
}

.second {
  display: flex;
  flex-direction: column;
  border-radius: 24rpx;
  margin-top: 24rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  background-color: white;
}

.addressView {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin-left: 24rpx;
  margin-right: 24rpx;
  margin-top: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #888;
}

.timeView,
.managerView {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin-left: 24rpx;
  margin-right: 24rpx;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #888;
}

.organizerView {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin-left: 24rpx;
  margin-right: 24rpx;
  padding-top: 16rpx;
  padding-bottom: 24rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1296db;
  width: 20%;
}

.content {
  font-size: 32rpx;
  margin-left: 24rpx;
  color: #888;
}

image {
  height: 32rpx;
  width: 32rpx;
  position: absolute;
  right: 0;
}