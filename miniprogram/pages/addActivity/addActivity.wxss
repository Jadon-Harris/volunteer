.page {
  background: linear-gradient(to bottom, #1296db, white);
  position: fixed;
  width: 100%;
  height: 100%;
}

.info {
  display: flex;
  flex-direction: column;
  border-radius: 24rpx;
  margin-top: 24rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  width: auto;
  background: rgba(255, 255, 255, 0.8);
  height: calc(100vh - 140rpx);
  z-index: 998;
}

.nameView,
.timeView,
.addressView,
.managerView,
.organizerView,
.detailView,
.creditView,
.recruitView,
.typeView {
  margin-top: 24rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
}

.address,
.date,
.credit,
.type {
  display: flex;
  color: #888;
  margin-top: 12rpx;
  margin-left: 12rpx;
  margin-right: 12rpx;
  background-color: white;
  height: 60rpx;
  padding-left: 12rpx;
  align-items: center;
  border-radius: 12rpx;
}

input {
  color: #888;
  height: 60rpx;
  padding-left: 12rpx;
  margin-top: 12rpx;
  margin-left: 12rpx;
  margin-right: 12rpx;
  background-color: white;
  border-radius: 12rpx;
}

.textareaView {
  margin-top: 12rpx;
  margin-left: 12rpx;
  margin-right: 12rpx;
}

textarea {
  display: flex;
  width: auto;
  margin-bottom: 20rpx;
  padding-left: 12rpx;
  padding-right: 12rpx;
  padding-top: 12rpx;
  border-radius: 12rpx;
  color: #888;
}


.buttonView {
  bottom: 0;
  width: 100%;
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
  height: 140rpx;
  border-radius: 24rpx 24rpx 0rpx 0rpx;
  box-shadow: 0rpx -4rpx 16rpx 2rpx #888888;
  z-index: 999;
}

.buttonView button {
  border-radius: 24rpx;
  width: 70%;
  background-color: #1296db;
  color: white;

}