.page {
  background: linear-gradient(to bottom, #1296db, white);
  position: fixed;
  width: 100%;
  height: 100%;
}

.info {
  display: flex;
  flex-direction: column;
  border-radius: 24rpx;
  margin-top: 24rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  width: auto;
  background: rgba(255, 255, 255, 0.8);
  height: calc(100vh - 140rpx);
  z-index: 998;
}

.info view {
  margin-top: 24rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
}

.content {
  display: flex;
  color: #888;
  margin-top: 12rpx;
  margin-left: 12rpx;
  margin-right: 12rpx;
  background-color: white;
  height: 60rpx;
  padding-left: 12rpx;
  align-items: center;
  border-radius: 12rpx;
}

input {
  color: #888;
  height: 60rpx;
  padding-left: 12rpx;
  margin-top: 12rpx;
  margin-left: 12rpx;
  margin-right: 12rpx;
  background-color: white;
  border-radius: 12rpx;
}