.tr {
  display: flex;
  justify-content: center;
  height: 70rpx;
  align-items: center;
  padding: 10rpx;
  margin: 0 10rpx;
  border-bottom: 5rpx solid midnightblue;
  margin-bottom: 10rpx;
}

.tr .th {
  width: 40%;
  height: 70rpx;
  justify-content: center;
  display: flex;
  align-items: center;
  color: midnightblue;
  font-weight: 700;
}

.list {
  background-color: whitesmoke;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 10rpx;
  padding: 10rpx;
  border-bottom: 3rpx solid gray;
}

.list .td {
  width: 40%;
  height: 60rpx;
  justify-content: center;
  text-align: center;
  font-size: 40rpx;
  font-weight: 500;
}

.list .bt_wrap {
  display: flex;
  justify-content: center;
  align-items: center;
}

.list .bt_wrap .bt_update {
  width: 100rpx;
  height: 50rpx;
  margin: 0rpx;
  padding: 0rpx;
  background-color: green;
  color: white;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 5rpx;
}

.list .bt_wrap .bt_delete {
  width: 100rpx;
  height: 50rpx;
  margin: 0rpx;
  padding: 0rpx;
  background-color: red;
  color: white;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}